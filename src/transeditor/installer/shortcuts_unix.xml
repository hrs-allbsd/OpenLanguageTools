<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<!-- WARNING: all VERSION tokens surrounded by @ will be replaced by ant
	directory -->
<shortcuts>

  <programGroup defaultName="Open Language Tools XLIFF Translation Editor @VERSION@" location="applications"/>

   <shortcut
     name="OLT XLIFF Translation Editor"
     programGroup="yes"
     desktop="yes"
     applications="yes"
     startMenu="yes"
     startup="no"
     target="$INSTALL_PATH/translation.sh"
     workingDirectory="$INSTALL_PATH"
     commandLine=""
     initialState="noShow"
     iconFile="help"
     iconIndex="0"
     encoding="UTF-8"
     type="Application"
     description="Launch the Open Language Tools XLIFF Translation Editor">
   </shortcut>
  
   <shortcut
     name="User Manual"
     programGroup="yes"
     desktop="yes"
     applications="no"
     startMenu="no"
     startup="no"
     target="$INSTALL_PATH/OLT_XLIFF_Translation_Editor_Manual_@VERSION_FLAT@.pdf"
     workingDirectory="$INSTALL_PATH"
     commandLine=""
     initialState="normal"
     encoding="UTF-8"
     description="Open Language Tools XLIFF Translation Editor User Guide">

   </shortcut>
    
   <shortcut
     name="OLT XLIFF Editor Uninstaller"
     programGroup="yes"
     desktop="yes"
     applications="no"
     startMenu="no"
     startup="no"
     target="java"
     commandLine="-jar &quot;$INSTALL_PATH/Uninstaller/uninstaller.jar&quot;"
     initialState="noShow"
     iconFile="trash"
     iconIndex="0"
     workingDirectory=""
     type="Application"
     encoding="UTF-8"
     description="IzPack uninstaller">
   </shortcut>

</shortcuts>
