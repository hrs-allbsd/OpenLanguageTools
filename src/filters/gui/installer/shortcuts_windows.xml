<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<!-- WARNING: all VERSION tokens surrounded by @ will be replaced by ant
	directory -->
<shortcuts>

  <programGroup defaultName="Open Language Tools XLIFF Filters @VERSION@" location="applications"/>

   <shortcut
     name="Open Language Tools XLIFF Filters"
     programGroup="yes"
     desktop="no"
     applications="no"
     startMenu="no"
     startup="no"
     target="$INSTALL_PATH/filters.bat"
     workingDirectory="$INSTALL_PATH"
     commandLine=""
     initialState="noShow"
     iconFile="$INSTALL_PATH/icons/filters.ico"
     iconIndex="0"
     encoding="UTF-8"
     description="Launch the Open Language Tools XLIFF Filters">

     <createForPack name="Open Language Tools XLIFF Filters"/>
   </shortcut>
   
    <shortcut
     name="Uninstaller"
     programGroup="yes"
     desktop="no"
     applications="no"
     startMenu="no"
     startup="no"
     target="java"
     commandLine="-jar &quot;$INSTALL_PATH/Uninstaller/uninstaller.jar&quot;"
     initialState="noShow"
     iconFile="$INSTALL_PATH/icons/trash.ico"
     iconIndex="0"
     workingDirectory=""
     type="Application"
     encoding="UTF-8"
     description="IzPack uninstaller">
     <createForPack name="Open Language Tools XLIFF Filters" />
   </shortcut>

</shortcuts>
